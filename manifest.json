{
  "name": "Streamsize",
  "description": "Resize browser window for streaming / screencast",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "/src/background.js"
  },
  "options_page": "/src/options.html",
  "permissions": ["storage", "activeTab", "scripting", "system.display"],
  "action": {
    "default_popup": "/src/popup.html",
    "default_icon": {
      "16": "/src/images/logo16.png",
      "32": "/src/images/logo32.png",
      "48": "/src/images/logo48.png",
      "128": "/src/images/logo128.png"
    }
  },
  "icons": {
    "16": "/src/images/logo16.png",
    "32": "/src/images/logo32.png",
    "48": "/src/images/logo48.png",
    "128": "/src/images/logo128.png"
  }
}